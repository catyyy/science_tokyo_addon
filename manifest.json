{
  "manifest_version": 3,
  "name": "東京科学大学理工学系Portal自動認証",
  "version": "1.0",
  "description": "学籍番号・パスワード・マトリックスコードを自動入力（ローカルOCR対応）",
  "permissions": ["storage"],
  "host_permissions": [
    "https://portal.nap.gsic.titech.ac.jp/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "自動ログイン設定",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://portal.nap.gsic.titech.ac.jp/GetAccess/Login*"],
      "js": ["jquery.min.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "tesseract.min.js",
        "worker.min.js",
        "tesseract-core.wasm.js",
        "eng.traineddata"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; worker-src 'self';"
  }
}